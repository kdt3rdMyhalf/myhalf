<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>반쪽</title>
    <!-- quill web editor cdn -->
    <link
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
      rel="stylesheet"
    />
    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/static/css/commu_post_write.css" />
    <link rel="stylesheet" href="/static/css/header.css" />
  </head>
  <body>
    <%- include ('header-none.ejs') %>

    <form action="/commu/post" name="postForm" method="post">
      <!-- <label for="category">
        Category: <input type="text" name="category" id="category" /> </label
      ><br /> -->
      <div class="categoryWrap">
        <h3 class="divName">카테고리 <span class="notNull">*</span></h3>
        <input
          type="radio"
          name="category"
          id="강아지"
          value="강아지"
          checked
        />
        <label for="강아지">강아지</label>
        <input type="radio" name="category" id="고양이" value="고양이" />
        <label for="고양이">고양이</label>
        <input type="radio" name="category" id="소동물" value="소동물" />
        <label for="소동물">소동물</label>
        <input type="radio" name="category" id="기타" value="기타" />
        <label for="기타">기타</label>
      </div>
      <div class="writeWrap">
        <h3 class="divName">글 작성 <span class="notNull">*</span></h3>
        <label for="title">
          <input
            type="text"
            name="title"
            id="title"
            placeholder="글 제목을 입력해 주세요"
          />
        </label>
        <div id="editor"></div>
      </div>
      <div class="tagWrap">
        <h3 class="divName">태그 입력</h3>
        <label for="tag">
          <input
            type="text"
            name="tag"
            id="tag"
            placeholder="태그를 입력해 주세요"
          />
        </label>
      </div>
      <div class="btn">
        <button type="button" onclick="postPost()" id="postBtn">
          게시글 작성
        </button>
      </div>
    </form>
    <button class="check">check</button>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <!-- js 연결 -->
    <script src="/static/js/commu_post_write.js"></script>
  </body>
</html>
