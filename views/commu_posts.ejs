<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>반쪽</title>

    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <!-- CSS 연결 -->
    <link rel="stylesheet" href="/static/css/commu_posts.css" />

    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form class="searchForm">
      <input
        class="searchInput"
        type="search"
        maxlength="130"
        placeholder="찾으시는 글이 있으신가요?"
      />
      <button type="submit"></button>
    </form>
    <div class="searchCheckBox">
      <div class="serachCheckBox2">
        <form>
          <fieldset>
            <span class="checkBox2Span">동물 유형</span>
            <label>
              <input
                type="checkbox"
                name="searchCheckbox"
                id="searchDog"
                value="dog"
              />
              <span>강아지</span>
            </label>
            <label>
              <input
                type="checkbox"
                name="searchCheckbox"
                id="searchCat"
                value="cat"
              />
              <span>고양이</span>
            </label>
            <label>
              <input
                type="checkbox"
                name="searchCheckbox"
                id="searchSmall"
                value="small"
              />
              <span>소동물</span>
            </label>
            <label>
              <input
                type="checkbox"
                name="searchCheckbox"
                id="searchEtc"
                value="etc"
              />
              <span>기타</span>
            </label>
            <button type="button" id="searchCheckBtn">적용</button>
          </fieldset>
        </form>
      </div>
    </div>
    <div class="hotPostBox">
      <div class="hotPostWrapBox">
        <div class="hotPostWrap">
          <div class="hotName">Hot!</div>
          <div class="hotTitle">글 제목 20자까지만</div>
          <div class="hotDoc">글 내용 100자?</div>
          <div class="hotPostDiv">
            <div class="hotComment">댓글 수</div>
            <div class="hotDate">날짜</div>
          </div>
        </div>
        <div class="hotPostWrap"></div>
        <div class="hotPostWrap"></div>
        <div class="hotPostWrap"></div>
        <div class="hotPostWrap"></div>
        <div class="hotPostWrap"></div>
        <div class="hotPostWrap"></div>
      </div>
    </div>

    <div class="postList">
      <% for (let i = 0; i < data.length; i++) { %>
      <a href="/commu/posts/<%= data[i].postId %>" class="postCard">
        <img src="<%= data[i].postImg %>" alt="게시글 이미지" />
        <div class="postDesc1">
          <div class="postTitle"><%= data[i].postTitle %></div>
          <div class="postDoc"><%= data[i].postDoc.substr(0, 150) %></div>
          <div class="postDesces1">
            <div class="postHashtag">#<%= data[i].postCategory %></div>
            <div class="postDescComment">댓글수 수정</div>
          </div>
          <div class="postDesces2">
            <div class="postDesces2-1">
              <div class="postDescWriter"><%= data[i].userName %></div>
              <div class="postDescDate"><%= data[i].postDate %></div>
              <div class="postDescViews"><%= data[i].postViews %></div>
            </div>
            <div class="postDescLikes">♥︎ <%= data[i].postLikes %></div>
          </div>
        </div>
      </a>
      <% } %>
    </div>
    <div class="pageList"></div>
    <a href="/commu/post">
      <button type="button" id="postBtn">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          fill="currentColor"
          class="bi bi-pencil-square"
          viewBox="0 0 16 16"
        >
          <path
            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
          />
          <path
            fill-rule="evenodd"
            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
          />
        </svg>
      </button>
    </a>

    <script src="/static/js/commu_posts.js"></script>
  </body>
</html>
